# Main functions


def setup():
	global port
	global mode
	global splitted
	if (args.port!=None):
		port = args.port
	elif (args.port==None):
		splitted = args.host.split(":")
		if (splitted[0]=="https"):
			port = 443
		if (splitted[0]=="http"):
			port = 80
		mode = splitted[0]

